generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Farmacia {
  id String @id @default(uuid())

  name         String
  urllogo      String
  phone        String
  whatsapp     String
  street       String
  city         String
  zipcode      Int
  neighborhood String
  lat          String
  lng          String
  email        String
  plantao      Plantao[]
  createAt     DateTime
  updateAt     DateTime  @updatedAt

  @@map("farmacias")
}

model Plantao {
  id String @id @default(uuid())

  datetimestart DateTime
  datetimeend   DateTime
  createAt      DateTime
  updateAt      DateTime @updatedAt

  Farmacia   Farmacia? @relation(fields: [farmaciaId], references: [id])
  farmaciaId String?
  @@map("plantoes")
}
